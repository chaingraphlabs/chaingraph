{
  "name": "@badaitech/chaingraph-message-bus",
  "type": "module",
  "version": "0.4.4",
  "private": false,
  "description": "Chaingraph Message Bus for inter-service communication",
  "license": "BUSL-1.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badaitech/chaingraph.git",
    "directory": "./packages/chaingraph-message-bus"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc -b --watch",
    "dev:worker": "bun --watch run server/workers/index.ts",
    "dev:stream": "bun --watch run server/event-stream/index.ts",
    "build": "tsc -b",
    "start:worker": "node dist/server/workers/index.js",
    "start:stream": "node dist/server/event-stream/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:execution": "tsx test/test-execution.ts",
    "test:flow": "tsx test/test-with-flow.ts",
    "check-types": "tsc -b"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">= 5.80.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "kafkajs": "^2.2.4",
    "kafkajs-lz4": "2.0.0-beta.0",
    "nanoid": "^5.1.5",
    "nanoid-dictionary": "^5.0.0",
    "pg": "^8.16.2",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "superjson": "^2.2.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@badaitech/chaingraph-nodes": "workspace:*",
    "@badaitech/chaingraph-trpc": "workspace:*",
    "@badaitech/chaingraph-types": "workspace:*",
    "@badaitech/typescript-config": "workspace:*",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^3.1.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "vitest": "^3.1.1"
  }
}
