{
  "extends": "@badaitech/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "ESNext",
      "ESNext.AsyncIterable"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "paths": {
      "@badaitech/chaingraph-types/*": [
        "../chaingraph-types/src/*"
      ],
      "@badaitech/typescript-config/*": [
        "../typescript-config/*"
      ],
      "@badaitech/badai-api/*": [
        "../badai-api/src/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}